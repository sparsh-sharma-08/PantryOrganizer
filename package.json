{
  "name": "pantryorganization",
  "version": "1.0.0",
  "description": "A modern web application to help you manage your pantry, shopping list, and food inventory",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "backup": "node utils/backup.js",
    "health-check": "curl http://localhost:3000/api/health",
    "postinstall": "npm rebuild sqlite3 --build-from-source"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sparsh-sharma-08/PantryOrganizer.git"
  },
  "keywords": [
    "pantry",
    "organizer",
    "inventory",
    "shopping-list",
    "food-management",
    "nodejs",
    "express",
    "sqlite"
  ],
  "author": "Sparsh Sharma",
  "license": "MIT",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/sparsh-sharma-08/PantryOrganizer/issues"
  },
  "homepage": "https://github.com/sparsh-sharma-08/PantryOrganizer#readme",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "compression": "^1.7.4",
    "connect-sqlite3": "^0.9.16",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.18.1",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "nodemailer": "^7.0.3",
    "passport": "^0.7.0",
    "passport-github2": "^0.1.12",
    "passport-google-oauth20": "^2.0.0",
    "sqlite3": "^5.1.6",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!logs/**",
      "!backups/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}
