rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helpers ---
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isFamilyMember(familyId) {
      return isSignedIn() && 
             exists(/databases/$(database)/documents/families/$(familyId)) &&
             request.auth.uid in get(/databases/$(database)/documents/families/$(familyId)).data.members;
    }

    function canAccessPantry(id) {
       return isOwner(id) || isFamilyMember(id);
    }

    // --- Users ---
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }

    // --- Families ---
    match /families/{familyId} {
      // Allow any auth user to create a family
      allow create: if isSignedIn();
      
      // key change: Allow read/list to everyone signed in (needed to query by invite code)
      allow read: if isSignedIn();
      
      // Allow update if you are a member OR if you are adding yourself (joining)
      allow update: if isSignedIn() && (
        request.auth.uid in resource.data.members || 
        request.auth.uid in request.resource.data.members
      );
      
      // key change: Allow owner to delete
      allow delete: if isSignedIn() && request.auth.uid == resource.data.ownerId;
    }

    // --- Pantries (Items + History + MealPlans) ---
    // This efficiently covers BOTH private lists (id=uid) and family lists (id=familyId)
    match /pantries/{id}/items/{itemId} {
      allow read, write: if canAccessPantry(id);
    }
    
    match /pantries/{id}/items/{itemId}/history/{historyId} {
      allow read, write: if canAccessPantry(id);
    }
    
    match /pantries/{id}/mealPlans/{dayId} {
      allow read, write: if canAccessPantry(id);
    }

    // --- Shopping Lists ---
    match /shoppingLists/{id}/items/{itemId} {
      allow read, write: if canAccessPantry(id);
    }
    
    match /shoppingLists/{id}/items/{itemId}/history/{historyId} {
      allow read, write: if canAccessPantry(id);
    }
  }
}
