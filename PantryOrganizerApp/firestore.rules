rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helpers ---
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isFamilyMember(familyId) {
      return isSignedIn() && 
             exists(/databases/$(database)/documents/families/$(familyId)) &&
             request.auth.uid in get(/databases/$(database)/documents/families/$(familyId)).data.members;
    }

    function canAccessPantry(id) {
       return isOwner(id) || isFamilyMember(id);
    }

    // --- Users ---
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }

    // --- Families ---
    match /families/{familyId} {
      allow create: if isSignedIn();
      
      // Allow read if you are a member OR if you are looking it up by invite code (needed for join)
      // Note: 'list' permissions might be needed for broad queries, 
      // but 'read' usually covers get() and basic queries if you know the ID.
      // For Invite Code query, we need to allow list/read generally to signed in users, 
      // OR we strictly scope it. For simplicity in this app:
      allow read: if isSignedIn(); 
      
      // Update: 
      // 1. Members can update (e.g. edit name)
      // 2. Non-members can update ONLY if they are adding themselves (Joining)
      allow update: if isSignedIn() && (
        request.auth.uid in resource.data.members || 
        request.auth.uid in request.resource.data.members
      );
      
      allow delete: if isSignedIn() && request.auth.uid == resource.data.ownerId;
    }

    // --- Pantries (Items + History + MealPlans) ---
    match /pantries/{id}/items/{itemId} {
      allow read, write: if canAccessPantry(id);
    }
    
    match /pantries/{id}/items/{itemId}/history/{historyId} {
      allow read, write: if canAccessPantry(id);
    }
    
    match /pantries/{id}/mealPlans/{dayId} {
      allow read, write: if canAccessPantry(id);
    }

    // --- Shopping Lists ---
    match /shoppingLists/{id}/items/{itemId} {
      allow read, write: if canAccessPantry(id);
    }
    
    match /shoppingLists/{id}/items/{itemId}/history/{historyId} {
      allow read, write: if canAccessPantry(id);
    }
  }
}
